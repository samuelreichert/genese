<div class="row">
  <div class="col-lg-10 col-lg-offset-1">
    <h5 class="text-muted">Receitas</h5>
    <% if @incomes.empty? %>
      <p class="lead">Nenhuma receita lançada ainda neste período.</p>
    <% else %>
      <table class='table table-condensed'>
        <thead>
          <tr>
            <th class="col-lg-2">categoria</th>
            <th class="col-lg-2">data</th>
            <th class="col-lg-5">descrição</th>
            <th class="col-lg-2 text-right">valor</th>
          </tr>
        </thead>
        <tbody>
          <% @incomes.each do |income| %>
            <tr>
              <td>
                <i class="fa fa-circle" style="color:<%= income.category.color %>;"></i>
                <%= income.category.name %>
              </td>
              <td><%= I18n.l income.date %></td>
              <td><%= link_to income.description, income %></td>
              <td class="text-right">
                <%= number_to_currency(income.value, unit: @current_account.read_attribute('currency_type'), separator: ",", delimiter: ".") %>
              </td>
            </tr>
          <% end %>
          <tr>
            <td><strong>Total</strong></td>
            <td></td>
            <td></td>
            <td class="text-right">
              <strong>
                <%= number_to_currency(@totalizer_incomes, unit: @current_account.read_attribute('currency_type'), separator: ",", delimiter: ".") %>
              </strong>
            </td>
          </tr>
        </tbody>
      </table>
    <% end %>
    <h5 class="text-muted">Despesas</h5>
    <% if @expenses.empty? %>
      <p class="lead">Nenhuma despesa lançada ainda neste período.</p>
    <% else %>
      <table class='table table-condensed'>
        <thead>
          <tr>
            <th class="col-lg-2">categoria</th>
            <th class="col-lg-2">data</th>
            <th class="col-lg-5">descrição</th>
            <th class="col-lg-2 text-right">valor</th>
          </tr>
        </thead>
        <tbody>
          <% @expenses.each do |expense| %>
            <tr>
              <td>
                <i class="fa fa-circle" style="color:<%= expense.category.color %>;"></i>
                <%= expense.category.name %>
              </td>
              <td><%= I18n.l expense.date %></td>
              <td><%= link_to expense.description, expense %></td>
              <td class="text-right"><%= number_to_currency(expense.value, unit: @current_account.read_attribute('currency_type'), separator: ",", delimiter: ".") %></td>
            </tr>
          <% end %>
          <tr>
            <td><strong>Total</strong></td>
            <td></td>
            <td></td>
            <td class="text-right">
              <strong>
                <%= number_to_currency(@totalizer_expenses, unit: @current_account.read_attribute('currency_type'), separator: ",", delimiter: ".") %>
              </strong>
            </td>
          </tr>
        </tbody>
      </table>
    <% end %>
  </div>
</div>
