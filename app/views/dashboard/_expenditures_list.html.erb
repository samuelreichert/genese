<div class="row">
  <div class="col-lg-12">
    <p class="lead">Despesas a pagar</p>
  </div>

  <% if @entries.empty? %>
    <%= render 'no_data' %>
  <% else %>
    <div class="col-lg-12">
      <table class="table table-hover">
        <tbody>
          <% @expenditures.each do |expenditure| %>
            <tr>
              <td>
                <%= expenditure.description %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>
