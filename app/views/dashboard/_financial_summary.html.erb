<div class="row">
  <div class="col-lg-12">
    <p class="lead">Resumo Financeiro</p>
  </div>

  <% if @entries.empty? %>
    <%= render 'no_data' %>
  <% else %>
    <div class="col-lg-6">
      <p class="text-danger">Despesa Total</p>
      <h4 class="expenditure-title">
        <%= "#{@currency_simbol} #{@expenditure}" %>
      </h4>
    </div>

    <div class="col-lg-6">
      <p class="text-success">Receita Total</p>
      <h4 class="balance-title">
        <%= "#{@currency_simbol} #{@balance}" %>
      </h4>
    </div>
  <% end %>
</div>
