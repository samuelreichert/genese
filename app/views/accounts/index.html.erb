<div class="row">
  <div class="col-lg-10 col-lg-offset-1">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-12 text-center">
            <h3>Contas</h3>
          </div>
        </div>

        <div class="row">
          <div class="col-lg-8 col-lg-offset-2">
            <ul class="list-group">
              <% @accounts.each do |account| %>
                <li class="list-group-item">
                  <div class="row">
                    <div class="col-lg-8">
                      <%= account.name %>
                    </div>
                    <div class="col-lg-4 text-right">
                      <% if account.owner == current_user.id %>
                        <%= link_to account, method: :delete, data: { confirm: 'Deseja realmente deletar esta conta?' }, style: 'margin-left: 8px;', class: 'link-icon' do %>
                          <span class="fa fa-lg fa-trash"></span>
                        <% end %>
                      <% end %>
                    </div>
                  </div>
                </li>
              <% end %>
            </ul>

            <%= link_to new_account_path, class: 'btn btn-default' do %>
              <i class="fa fa-plus"></i>
              Nova Conta
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
