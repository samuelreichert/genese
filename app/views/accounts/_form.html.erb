<%= simple_form_for(@account) do |f| %>
  <%= f.error_notification %>

  <div class="row">
    <div class="col-lg-12">
      <h5>Lançamentos</h5>
    </div>
    <div class="col-lg-12">
      <%= f.input :currency_type %>
    </div>
    <div class="col-lg-12">
      <%= f.input :entries_order %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <h3>Categorias</h3>
    </div>
    <div class="col-lg-12">

    </div>
    <div class="col-lg-12"></div>
  </div>

  <div class="form-actions">
    <div class="row">
      <div class="col-lg-12 text-right">
        <%= f.button :submit, "Salvar Alterações", class: 'btn btn-success' %>
      </div>
    </div>
  </div>
<% end %>
