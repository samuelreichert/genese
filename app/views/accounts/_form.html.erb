<div class="row">
  <div class="col-lg-10 col-lg-offset-1">
    <%= simple_form_for @account, html: {class: 'form-horizontal'} do |f| %>
      <fieldset>
        <legend>Lançamentos</legend>
        <%= f.error_notification %>

        <div class="form-group">
          <%= f.label :currency_type, class: 'col-lg-2 control-label' %>

          <div class="col-lg-10">
            <%= f.select :currency_type %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :entries_order, class: "col-lg-2 control-label" %>
          <div class="col-lg-10">
            <div class="radio">
              <label>
                <%= f.radio_button :entries_order, true, value: true %>
                Crescente
              </label>
            </div>
            <div class="radio">
              <label>
                <%= f.radio_button :entries_order, false, checked: true, value: false %>
                Decrescente
              </label>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="col-lg-10 col-lg-offset-2 text-right">
            <%= f.button :submit, "Salvar Alterações", class: 'btn btn-success' %>
          </div>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>

<hr>

<div class="row">
  <div class="col-lg-12">
    <h5>Categorias</h5>
  </div>
</div>
