<section>
  <section id="title">
    <div class="container">
      <div class="row">
        <div class="col-xs-12 text-center">
          <h1 class="section-heading">Cadastre-se</h1>
        </div>
      </div>
    </div>
  </section>

  <section id="register">
    <div class="container" id="resources">
      <%= render 'shared/flash' %>

      <div class="row">
        <div class="col-xs-12 col-sm-8 col-sm-offset-2">
          <div class="panel panel-default">
            <div class="panel-body">
              <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {multipart: true}) do |f| %>
                <br><br>
                <div class="row">
                  <div class="col-xs-12 col-sm-8 col-sm-offset-2">
                    <%= f.error_notification %>
                  </div>

                  <div class="col-xs-12 col-sm-8 col-sm-offset-2">
                    <%= f.input :name, required: true, autofocus: true %>

                    <% maxDate = Date.today.end_of_year - 5.year %>
                    <%= f.input :birth_date, as: :date_picker, input_html: {data: {date_options: {maxDate: maxDate.to_s}}} %>

                    <%= f.input :avatar, as: :file, required: false, input_html: {accept: 'image/*'} %>

                    <%= f.input :email, required: true %>
                    <%= f.input :password, required: true, hint: (I18n.t('users.registrations.new.minimum_password_text', min_password: @minimum_password_length) if @minimum_password_length) %>
                    <%= f.input :password_confirmation, required: true %>
                  </div>

                  <div class="col-xs-12 col-sm-8 col-sm-offset-2">
                    <%= f.button :submit, "Criar Conta", class: 'btn btn-success btn-block' %>
                  </div>
                </div>
                <br><br>
                <div class="row">
                  <div class="col-xs-12 text-center">
                    <%= render "users/shared/links" %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</section>
