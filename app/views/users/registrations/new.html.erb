<section>
  <div class="container" id="register">
    <%= render 'shared/flash' %>

    <div class="row">
      <div class="col-lg-12 text-center">
        <h2>Cadastre-se</h2>
        <hr>
      </div>

      <div class="col-lg-8 col-lg-offset-2">
        <div class="panel panel-default">
          <div class="panel-body">
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {multipart: true}) do |f| %>
              <br><br>
              <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                  <%= f.error_notification %>
                </div>

                <div class="col-lg-8 col-lg-offset-2">
                  <%= f.input :name, required: true, autofocus: true %>

                  <%= f.input :birth_date, as: :date_picker %>

                  <%= f.input :avatar, as: :file, required: false, input_html: {accept: 'image/*'} %>

                  <%= f.input :email, required: true %>
                  <%= f.input :password, required: true, hint: (I18n.t('users.registrations.new.minimum_password_text', min_password: @minimum_password_length) if @minimum_password_length) %>
                  <%= f.input :password_confirmation, required: true %>
                </div>

                <div class="col-lg-8 col-lg-offset-2">
                  <%= f.button :submit, "Criar Conta", class: 'btn btn-success btn-block' %>
                </div>
              </div>
              <br><br>
              <div class="row">
                <div class="col-lg-12 text-center">
                  <%= render "users/shared/links" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
