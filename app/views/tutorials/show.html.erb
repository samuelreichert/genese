<section>
  <section id="title">
    <div class="container">
      <div class="row">
        <div class="col-xs-12 text-center">
          <h1 class="section-heading">Central de Ajuda</h1>
        </div>
      </div>
    </div>
  </section>

  <section id="help-center">
    <div class="container" id="resources">
      <div class="row">
        <div class="col-xs-12 col-sm-10 col-sm-offset-1">
          <div class="panel panel-default">
            <div class="panel-body">
              <div class="row">
                <div class="col-xs-12 col-sm-10 col-sm-offset-1">
                  <h3>
                    <%= @tutorial.title %> <br>
                    <small><%= I18n.l(@tutorial.created_at.to_date) %></small>
                  </h3>

                  <p class="lead">
                    <%= @tutorial.description %>
                  </p>
                  <%= link_to :back, class: "btn btn-default" do %>
                    <i class="fa fa-chevron-left"></i>
                    Voltar
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</section>
