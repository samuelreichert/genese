<div class="row entry-header">
  <div class="col-lg-4 col-md-4 text-center">
    <%= link_to new_entry_path(entries_type: Entry.entries_types[:expense]), class: 'btn btn-danger btn-new-entry btn-margin-right' do %>
      <i class="fa fa-plus"></i>
      Despesa
    <% end %>

    <%= link_to new_entry_path(entries_type: Entry.entries_types[:income]), class: 'btn btn-success btn-new-entry' do %>
      <i class="fa fa-plus"></i>
      Receita
    <% end %>
  </div>

  <div class="col-lg-4 col-md-4 text-center">
    <h4>Lan√ßamentos</h4>
  </div>

  <div class="col-lg-4 col-md-4 text-center">
    <h5 class="month-selector">
      <%= link_to @last_month_path do %>
        <i class="fa fa-chevron-left"></i>
      <% end %>

      <span><%= formatted_current_date @current_date %></span>

      <%= link_to @next_month_path do %>
        <i class="fa fa-chevron-right"></i>
      <% end %>
    </h5>
  </div>
