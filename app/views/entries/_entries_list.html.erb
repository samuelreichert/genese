<div class="row">
  <% if @entries.empty? %>
    <div class="col-lg-10 col-lg-offset-1 text-center not-found-box">
      <i class='fa fa-exclamation-circle fa-4x muted'></i>
      <h5 class='muted'>Nenhum lançamento encontrado neste período</h5>
    </div>
  <% else %>
    <div class='col-lg-12'>
      <table class='table table-striped table-hover'>
        <tbody>
          <% @entries.each do |entry| %>
            <tr>
              <td>
                <% if @entries.entries_type == Entry.entries_types[:income] %>
                  <i class='fa fa-plus-square' style='color: #2ecc71;'></i>
                <% else %>
                  <i class='fa fa-minus-square' style='color: #e74c3c;'></i>
                <% end %>
              </td>
              <td><%= "#{Account.currency_types[@account.curreny_type]} #{entry.value}"%></td>
              <td><%= link_to entry.description, entry %></td>
              <td>
                <i class='fa fa-circle' style="color:<%= entry.category.color %>;"></i>
                <%= entry.category.name %>
              </td>
              <td>
                <%= link_to edit_entry_path(entry) do %>
                  <i class='fa fa-pencil'></i>
                <% end %>
              </td>
              <td>
                <%= link_to entry, method: :delete, data: { confirm: 'Deseja mesmo deletar este lançamento?' } do %>
                  <i class='fa fa-trash'></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>
