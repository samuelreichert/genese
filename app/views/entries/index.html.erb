<div class="container">
  <div class="row">
    <div class="col-lg-10 col-lg-offset-1">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="row entry-header">
            <div class="col-lg-12">
              <div class="row">
                <div class="col-lg-4 text-center">
                  <%= link_to new_entry_path, class: 'btn btn-danger btn-new-entry btn-margin-right' do %>
                    <span class="fa fa-plus"></span>
                    Nova Despesa
                  <% end %>

                  <%= link_to new_entry_path, class: 'btn btn-success btn-new-entry' do %>
                    <span class="fa fa-plus"></span>
                    Nova Receita
                  <% end %>
                </div>
                <div class="col-lg-4 text-center">
                  <h4>Lançamentos</h4>
                </div>
                <div class="col-lg-4 text-center">
                  <h5 class="month-selector">
                    <%= link_to '#' do %>
                      <span class="fa fa-chevron-left"></span>
                    <% end %>

                    <span><%= I18n.t("date.month_names")[Date.today.month] %></span>

                    <%= link_to '#' do %>
                      <span class="fa fa-chevron-right"></span>
                    <% end %>
                  </h5>
                </div>
              </div>
              <hr>
            </div>
          </div>

          <table class="table table-striped table-hover ">
            <tbody>
              <% @entries.each do |entry| %>
                <tr>
                  <td><%= "#{@account.curreny_type} #{entry.value}"%></td>
                  <td><%= link_to entry.description, entry %></td>
                  <td>
                    <span class="fa fa-circle" style="color:<%= entry.category.color %>;"></span>
                    <span><%= entry.category.name %></span>
                  </td>
                  <td>
                    <%= link_to edit_entry_path(entry) do %>
                      <span class="fa fa-pencil"></span>
                    <% end %>
                  </td>
                  <td>
                    <%= link_to entry, method: :delete, data: { confirm: 'Deseja mesmo deletar este lançamento?' } do %>
                      <span class="fa fa-trash"></span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
