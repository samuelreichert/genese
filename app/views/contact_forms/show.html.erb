<section>
  <div class="container" id="contact_form">
    <%= render 'shared/flash' %>

    <div class="row">
      <div class="col-lg-12 text-center">
        <h2>Formulário de contato</h2>
        <hr>
      </div>

      <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3">
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="row">
              <div class="col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1 text-center">
                <h3>Mensagem enviada!</h3>
              </div>
              <div class="col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1 text-left">
                <br>
                <p>
                  E-mail: <%= @contact_form.email %> <br>
                  Mensagem: <%= @contact_form.message %> <br>
                </p>
              </div>
              <div class="col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1 text-center">
                <br><br><p>Aguarde, em breve entraremos em contato com você!</p>
              </div>
              <div class="col-lg-12">
                <%= link_to :back, class: "btn btn-default" do %>
                  <i class="fa fa-chevron-left"></i>
                  Voltar
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
