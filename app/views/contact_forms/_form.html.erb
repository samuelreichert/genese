<%= simple_form_for(@contact_form) do |f| %>
  <div class="row">
    <div class="col-lg-12">
      <%= f.error_notification %>

      <%= f.input :email, placeholder: 'Digite seu e-mail' %>
      <%= f.input :message, input_html: {rows: 5, placeholder: 'Digite sua mensagem para nÃ³s'} %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-6">
      <%= link_to :back, class: "btn btn-default" do %>
        <span class="fa fa-chevron-left"></span>
        Voltar
      <% end %>
    </div>
    <div class="col-lg-6 text-right">
      <%= f.button :submit, 'Enviar', class: 'btn-success' %>
    </div>
  </div>
<% end %>
